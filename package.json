{
  "name": "netease-music-electron-app",
  "version": "1.0.0",
  "description": "网易云音乐桌面应用 - 基于 Electron 框架",
  "main": "src/main.js",
  "homepage": "https://github.com/netease-music/electron-app",
  "author": {
    "name": "Netease Music Desktop App",
    "email": "support@netease-music-app.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "netease-music",
    "desktop-app"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "electron-store": "^11.0.2"
  },
  "build": {
    "appId": "com.netease.music.desktop",
    "productName": "网易云音乐",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "linux": {
      "category": "Audio",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-linux.${ext}",
      "maintainer": "Netease Music Desktop App <support@netease-music-app.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
